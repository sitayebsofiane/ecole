{% extends "base.html.twig" %}
{% block title %}
	{{ parent () }}
	Matiers
{% endblock %}
{% block stylesheets %}
	{{ parent() }}
{% endblock %}
{% block body %}
	 {% include "nav/nav_admin.html.twig" %}
	<section id="matiere" class="padd-section text-center wow fadeInUp">
		<table class="table">
			<thead class="thead-light">
				<tr>
					<th scope="col">ID_Etudiant</th>
					<th scope="col">Nom</th>
					<th scope="col">prenom</th>
					<th scope="col">email</th>
					<th scope="col">date de naissance</th>
					<th scope="col">promotion</th>
					<th scope="col">inscrit</th>
				</tr>
			</thead>
			<tbody>
				{% for etudiant in etudiants %}
				<tr>
					<th scope="row">{{etudiant.id}}</th>
					<td>{{etudiant.nom}}</td>
					<td>{{etudiant.prenom}}</td>
					<td>{{etudiant.email}}</td>
					<td>{{etudiant.dateDeNaissance | date('d/m/Y') }}</td>
					<td>{% if etudiant.promotion %}{{etudiant.promotion.libelle}}{% endif %}</td>
					<td>{% if etudiant.inscrit %}inscrit{% else %}non inscrit{% endif %}</td>
                    <td><a href="{{ path('FicheEtudiant' ,{'id':etudiant.id}) }}">Modifier</a></td>
				</tr>
				{% endfor %}
			</tbody>
		</table>

	</section>
	{% block javascripts %}
		{{ parent() }}
	{% endblock %}
{% endblock body %}
