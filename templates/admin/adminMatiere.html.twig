{% extends "base.html.twig" %}
{% block title %}
	{{ parent () }}
	Matiers
{% endblock %}
{% block stylesheets %}
	{{ parent() }}
{% endblock %}
{% block body %}
	 {% include "nav/nav_admin.html.twig" %}
	<section id="matiere" class="padd-section text-center wow fadeInUp">
		<div>
			<a href="{{ path('ajoutMatiere') }}"><button class="btn btn-warning">ajouter des matieres</button></a>
		</div>
		<table class="table">
			<thead class="thead-dark">
				<tr>
					<th scope="col">ID_Matiere</th>
					<th scope="col">Nom</th>
					<th scope="col">ID_Enseigne</th>
					<th scope="col">Nom_Enseigne</th>
				</tr>
			</thead>
			<tbody>
				{% for matiere in matieres %}
				<tr>
					<th scope="row">{{matiere.id}}</th>
					<td>{{matiere.nom}}</td>
					<td>{{matiere.enseigne.id}}</td>
					<td>{{matiere.enseigne.nom}}</td>
                    <td><a href="#">Modifier</a></td>
                    <td><a onclick="return confirm('êtes vous sûr de suprimer')" href="#">Suprimer</a></td>
				</tr>
				{% endfor %}
			</tbody>
		</table>

	</section>
	{% block javascripts %}
		{{ parent() }}
	{% endblock %}
{% endblock body %}
