{% extends "base.html.twig" %}
{% block title %}
	{{ parent () }}
	Matiers
{% endblock %}
{% block stylesheets %}
	{{ parent() }}
{% endblock %}
{% block body %}
	{% include "nav/nav_admin.html.twig" %}
	
	<section id="matiere" class="padd-section text-center wow fadeInUp">
	<div>
		<a href="{{ path('enseigne') }}">
			<button class="btn btn-warning">ajouter des enseignes</button>
		</a>
	</div>
		<table class="table">
			<thead class="thead-dark">
				<tr>
					<th scope="col">ID_Enseigne</th>
					<th scope="col">Nom</th>
					<th scope="col">libelle</th>
				</tr>
			</thead>
			<tbody>
				{% for enseigne in enseignes %}
					<tr>
						<td>{{enseigne.id}}</td>
						<td>{{enseigne.nom}}</td>
						<td>{{enseigne.libelle}}</td>
						<td>
							<a href="{{ path('modifierEnseigne',{'id':enseigne.id}) }}">Modifier</a>
						</td>
						<td>
							<a onclick="return confirm('êtes vous sûr de suprimer')" href="{{ path('suprimerEnseigne',{'id':enseigne.id}) }}">Suprimer</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

	</section>
	{% block javascripts %}
		{{ parent() }}
	{% endblock %}
{% endblock body %}
